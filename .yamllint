extends: default

ignore: |
  .storage/
  appdaemon/
  custom_components/
  deps/
  notebooks/
  themes/
  esphome/
  node-red/
  themes/
  www/
  zigbee2mqtt/
  .ip_authenticated.yaml
  ip_bans.yaml
  known_devices.yaml
  secrets.yaml
  secrets_example.yaml
  google_calendars.yaml

rules:
  document-start:
    level: error
    present: false
  line-length:
    level: error
    max: 120
  comments:
    level: error
    min-spaces-from-content: 1
